<h1>Restaurants list:</h1>
<hr>
<%= link_to("Register new restaurant", new_restaurant_path, class: "btn btn-danger btn-sm")%>
<hr>

<% @restaurants.each do |restaurant| %>
  <h2><%= restaurant.name %></h2>
  <p><%= restaurant.category %></p>
  <%= link_to("Details", restaurant, class: "btn btn-primary btn-sm")%>
  <hr>
<% end %>

