
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
    <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <%= f.label :category %>
  <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "add a restaurant", class: "btn btn-primary btn-sm" %>
  <hr>
  <%= link_to("Home", restaurants_path, class: "btn btn-danger btn-sm")%>

<% end %>

